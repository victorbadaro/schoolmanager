{% extends "layout.njk" %}

{% block title %}Cadastro Professor{% endblock title %}

{% block content %}
<form class="card" method="POST" action="/teacher?_method=PUT">
    <section class="avatar"style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Editar Professor</h3>
        <div>
            <input type="hidden" name="id" value="{{ teacher.id }}">
            {% include "teacher/fields.njk" %}
        </div>
    </section>
</form>
{% endblock content %}