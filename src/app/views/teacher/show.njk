{% extends "layout.njk" %}

{% block title %}Professor{% endblock title %}

{% block content %}
<div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Professor</h3>
        <div>

            <div class="item">
                <div>Nome completo</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.education_level }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ teacher.class_type }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for subjects in teacher.subjects_taught %}
                    <span>{{ subjects }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <div class='btn-grid'>
                <a class="button" href="/teacher/{{ teacher.id }}/edit">Editar perfil</a>
                <form id="form-delete" action="/teacher?_method=DELETE" method="POST">
                    <input type="hidden" name="id" value="{{ teacher.id }}">
                    <button type="submit">Deletar</button>
                </form>
            </div>
        </div>
    </section>
</div>
{% include "confirm.njk" %}
{% endblock content %}