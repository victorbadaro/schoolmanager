{% block title %}Professor{% endblock title %}

{% block content %}
    <div class="card-message">
        <div class="deleted-lottie"></div>
        <div class="content">
            <h2>{{ message }}</h2>
            <a href="/teacher">Voltar a p√°gina de professores</a>
        </div>
    </div>
    <script src="/js/lottie.js" type="text/javascript"></script>
    <script>
        const element = document.querySelector('.deleted-lottie')

        lottie.loadAnimation({
            container: element, // the dom element that will contain the animation
            renderer: 'svg',
            loop: false,
            autoplay: true,
            path: '/js/lottieFiles/deleted.json' // the path to the animation json
        });
    </script>
{% endblock content %}