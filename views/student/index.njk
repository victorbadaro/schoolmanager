{% extends "layout.njk" %}

{% block title %}Aluno{% endblock title %}

{% block content %}
<div class="card table-container">
    <a href="/student/create">Novo</a>
    <table>
        <thead>
            <tr>
                <th>Nome completo</th>
                <th>Email</th>
                <th>Ano escolar</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <div>
                        <span style="background-image: url({{ student.avatar_url }})"></span>
                        {{ student.name }}
                    </div>
                </td>
                <td>
                    {{ student.email }}
                </td>
                <td>
                    {{ student.grade }}
                </td>
                <td><a href="/student/{{ student.id }}">ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock content %}